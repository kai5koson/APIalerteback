# Activer le module de réécriture d'URL si ce n'est pas déjà fait
<IfModule mod_rewrite.c>
    RewriteEngine On
</IfModule>

# Autoriser les en-têtes CORS
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "http://localhost:3010"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, X-Requested-With"
    Header always set Access-Control-Max-Age "86400"
    
    # Répondre correctement aux requêtes OPTIONS
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>