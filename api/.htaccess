# Activer le module de réécriture d'URL
<IfModule mod_rewrite.c>
    RewriteEngine On
</IfModule>

# Configuration CORS pour Apache
<IfModule mod_headers.c>
    Header always set Access-Control-Allow-Origin "https://ap-ialerte.vercel.app"
    Header always set Access-Control-Allow-Methods "GET, POST, PUT, DELETE, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, X-Requested-With, Accept"
    Header always set Access-Control-Max-Age "86400"
    
    # Traitement spécial pour les requêtes OPTIONS
    RewriteEngine On
    RewriteCond %{REQUEST_METHOD} OPTIONS
    RewriteRule ^(.*)$ $1 [R=200,L]
</IfModule>